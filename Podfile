    # Network
    pod 'Bagel', '~>  1.3.2'
    pod 'Moya', '~> 13.0'
    pod 'Moya/ReactiveSwift', '~> 13.0'
    pod 'Predicate', :path => './Predicate'
    
    # UI
    pod 'Texture'
    pod 'SwiftDate', '~>  4.5.1'
    
    # DB
    pod 'RealmSwift'
end
