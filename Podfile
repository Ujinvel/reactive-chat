    # Network
    pod 'Bagel', '~>  1.3.2'
    pod 'Moya', '~> 12.0.0-beta.1'
    pod 'Moya/ReactiveSwift', '~> 12.0.0-beta.1'
    pod 'Predicate', :path => './Predicate'
    
    # UI
    pod 'Texture'
    pod 'SwiftDate', '~>  4.5.1'
end
