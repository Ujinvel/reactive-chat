    pod 'ReactiveCocoa', '~> 10.1.0'
    pod 'ReactiveSwift', '~> 6.1.0'

    # Network
    pod 'Bagel', '~>  1.3.2'
    pod 'Moya', '~> 14.0.0-beta.4'
    pod 'Moya/ReactiveSwift', '~> 14.0.0-beta.4'
    
    # UI
    pod 'Texture'
    pod 'SwiftDate', '~>  6.1.0'
    
    # DB
    pod 'Predicate', :path => './Predicate'
end
